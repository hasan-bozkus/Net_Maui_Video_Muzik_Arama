<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BozkusMusic.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BozkusMusic.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="True">

    <TabBar>
        <Tab Title="Main" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainView}" />
        </Tab>
        <Tab Title="Play" Icon="playbutton.png">
            <ShellContent ContentTemplate="{DataTemplate local:PlayView}" />
        </Tab>
        <Tab Title="List" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate local:ListView}" />
        </Tab>
        <Tab Title="Setting" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingView}" />
        </Tab>
    </TabBar>

</Shell>
